.jumbotron(class="text-center")
  h2 Learn New Skills
div(ng-controller="exploreController as explore")
  input(type="button" value="most common skills" ng-click="explore.getSkillStats()")
  .grid(ng-controller="subjectsController as subjects" class="js-masonry" data-masonry-options="{'itemSelector': '.grid-item','percentPosition': true,'columnWidth':'.grid-sizer','isFitWidth': true, 'isOriginTop': false}")
    .grid-sizer
    .grid-item(ng-repeat="(key, val) in explore.dummyTally" ng-click="subjects.testFunc()" ng-style="{'font-size': 8 + val * 4 + 'px', 'width': (30 + (val * 10)) + 'px', 'height': (30 + (val * 10)) + 'px', 'line-height': (30 + (val * 10)) + 'px'}")
      //- {{ entry[0] }}
      {{ key }}


